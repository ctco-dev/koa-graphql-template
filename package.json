{
  "name": "koa-graphql-ts-template",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "npm run lint && tsc",
    "start": "npm run lint -- --force && run-p lint:watch build:watch",
    "test": "npm run test:all",
    "test:integration": "npm run validate:env && jest --config jest/integration.config.js",
    "test:unit": "npm run validate:env && jest --config jest/unit.config.js",
    "test:all": "npm run validate:env && jest",
    "lint": "tslint -t stylish 'src/**/*.ts'",
    "build:watch": "tsc-watch --onSuccess \"node build/server.js\"",
    "lint:watch": "chokidar \"src/**/*.ts\" -c \"tslint -t stylish --force '{path}'\"",
    "validate:env": "tsc env.ts --outDir ./build/ && node ./build/env.js"
  },
  "engines": {
    "node": ">= 7.6.0"
  },
  "dependencies": {
    "chalk": "2.0.1",
    "envalid": "3.1.1",
    "graphql": "0.10.4",
    "koa": "2.3.0",
    "koa-convert": "1.2.0",
    "koa-cors": "0.0.16",
    "koa-graphql": "0.7.1",
    "koa-router": "7.2.1",
    "moment": "2.18.1",
    "request-promise": "4.2.1",
    "source-map-support": "0.4.15",
    "winston": "2.3.1"
  },
  "devDependencies": {
    "@types/chalk": "0.4.31",
    "@types/graphql": "0.10.0",
    "@types/jest": "20.0.2",
    "@types/koa": "2.0.39",
    "@types/koa-router": "7.0.22",
    "@types/nock": "8.2.1",
    "@types/request-promise": "4.1.36",
    "@types/winston": "2.3.3",
    "chokidar-cli": "1.2.0",
    "jest": "20.0.4",
    "jest-junit": "2.1.0",
    "nock": "9.0.13",
    "npm-run-all": "4.0.2",
    "ts-jest": "20.0.7",
    "tsc-watch": "1.0.7",
    "tslint": "5.5.0",
    "typescript": "2.4.2"
  },
  "jest-junit": {
    "output": "./reports/test/junit.xml"
  }
}
