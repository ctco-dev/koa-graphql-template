{
  "name": "nodejs-graphql-template",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "npm run clean && npm run copy:graphql && npm run lint -- --force && run-p copy:graphql:watch lint:watch build:watch",
    "build": "npm run clean && npm run lint && tsc && npm run copy:graphql",
    "build:watch": "node node_modules/tsc-watch --onSuccess \"node build/server.js\"",
    "test": "npm run test:all",
    "test:integration": "npm run validate:env && jest --config jest/integration.config.js",
    "test:unit": "npm run validate:env && jest --config jest/unit.config.js",
    "test:all": "npm run validate:env && jest",
    "lint": "tslint -t stylish 'server/**/*.ts'",
    "lint:watch": "chokidar \"server/**/*.ts\" -c \"tslint -t stylish --force '{path}'\"",
    "validate:env": "tsc server/env.ts --lib esnext --outDir ./build/ && node ./build/env.js",
    "clean": "rimraf build",
    "clean:graphql": "rimraf build/**/*.{gql,graphql,graphqls}",
    "copy:graphql": "cpx \"server/**/*.{gql,graphql,graphqls}\" build",
    "copy:graphql:watch": "chokidar \"./server/**/*.{gql,graphql,graphqls}\" -c \"npm run clean:graphql && npm run copy:graphql && touch server.ts\"",
    "docker-mount": "docker-share mount -t"
  },
  "engines": {
    "node": ">= 8.1.4"
  },
  "dependencies": {
    "apollo-link": "1.0.7",
    "apollo-server-koa": "1.3.2",
    "chalk": "2.3.0",
    "envalid": "4.1.2",
    "graphql": "0.12.3",
    "graphql-tools": "2.16.0",
    "graphql-voyager": "1.0.0-rc.11",
    "koa": "2.4.1",
    "koa-bodyparser": "4.2.0",
    "koa-convert": "1.2.0",
    "koa-cors": "0.0.16",
    "koa-heartbeat": "0.1.2",
    "koa-router": "7.3.0",
    "lodash.merge": "4.6.0",
    "moment": "2.20.1",
    "request": "2.83.0",
    "request-promise": "4.2.2",
    "source-map-support": "0.5.0",
    "winston": "2.4.0"
  },
  "devDependencies": {
    "@types/graphql": "0.11.7",
    "@types/hapi": "16.1.12",
    "@types/jest": "22.0.0",
    "@types/koa": "2.0.43",
    "@types/koa-router": "7.0.27",
    "@types/nock": "9.1.1",
    "@types/request-promise": "4.1.39",
    "@types/winston": "2.3.7",
    "@types/zen-observable": "0.5.3",
    "cash-touch": "0.2.0",
    "chokidar-cli": "1.2.0",
    "cpx": "1.5.0",
    "docker-share": "0.0.4",
    "jest": "22.0.4",
    "jest-junit": "3.5.0",
    "nock": "9.1.5",
    "npm-run-all": "4.1.2",
    "rimraf": "2.6.2",
    "ts-jest": "22.0.0",
    "tsc-watch": "1.0.13",
    "tslint": "5.8.0",
    "tslint-config-airbnb": "5.4.2",
    "typescript": "2.6.2"
  },
  "jest-junit": {
    "output": "./reports/test/junit.xml"
  }
}
