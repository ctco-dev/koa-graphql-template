{
  "name": "koa-graphql-ts-template",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "npm run clean && npm run lint && tsc && npm run copy:graphql",
    "start": "npm run clean && npm run copy:graphql && npm run lint -- --force && run-p copy:graphql:watch lint:watch build:watch",
    "test": "npm run test:all",
    "test:integration": "npm run validate:env && jest --config jest/integration.config.js",
    "test:unit": "npm run validate:env && jest --config jest/unit.config.js",
    "test:all": "npm run validate:env && jest",
    "lint": "tslint -t stylish 'src/**/*.ts'",
    "build:watch": "tsc-watch --onSuccess \"node build/server.js\"",
    "lint:watch": "chokidar \"src/**/*.ts\" -c \"tslint -t stylish --force '{path}'\"",
    "validate:env": "tsc env.ts --outDir ./build/ && node ./build/env.js",
    "clean": "rimraf build",
    "clean:graphql": "rimraf build/**/*.{gql,graphql,graphqls}",
    "copy:graphql": "cpx \"src/**/*.{gql,graphql,graphqls}\" build/src --verbose",
    "copy:graphql:watch": "chokidar \"./src/**/*.{gql,graphql,graphqls}\" -c \"npm run clean:graphql && npm run copy:graphql && touch server.ts\""
  },
  "engines": {
    "node": ">= 7.6.0"
  },
  "dependencies": {
    "chalk": "1.1.3",
    "envalid": "3.1.1",
    "graphql": "0.10.2",
    "graphql-tools": "1.0.0",
    "koa": "2.3.0",
    "koa-convert": "1.2.0",
    "koa-cors": "0.0.16",
    "koa-graphql": "0.7.0",
    "koa-router": "7.2.1",
    "moment": "2.18.1",
    "request-promise": "4.2.1",
    "source-map-support": "0.4.15",
    "winston": "2.3.1"
  },
  "devDependencies": {
    "@types/chalk": "0.4.31",
    "@types/graphql": "0.9.2",
    "@types/jest": "20.0.2",
    "@types/koa": "2.0.39",
    "@types/koa-router": "7.0.22",
    "@types/nock": "8.2.1",
    "@types/request-promise": "4.1.35",
    "@types/winston": "2.3.3",
    "cash-cp": "0.2.0",
    "cash-touch": "0.2.0",
    "chokidar-cli": "1.2.0",
    "cpx": "1.5.0",
    "jest": "20.0.4",
    "jest-junit": "1.5.1",
    "nock": "9.0.13",
    "node-touch": "0.0.3",
    "npm-run-all": "4.0.2",
    "rimraf": "2.6.1",
    "ts-jest": "20.0.6",
    "tsc-watch": "1.0.6",
    "tslint": "5.4.3",
    "typescript": "2.4.1"
  },
  "jest-junit": {
    "output": "./reports/test/junit.xml"
  }
}
