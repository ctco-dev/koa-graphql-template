{
  "name": "nodejs-graphql-template",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "npm run clean && npm run copy:graphql && npm run lint -- --force && run-p copy:graphql:watch lint:watch build:watch",
    "build": "npm run clean && npm run lint && tsc && npm run copy:graphql",
    "build:watch": "node node_modules/tsc-watch --onSuccess \"node build/server.js\"",
    "test": "npm run test:all",
    "test:integration": "npm run validate:env && jest --config jest/integration.config.js",
    "test:unit": "npm run validate:env && jest --config jest/unit.config.js",
    "test:all": "npm run validate:env && jest",
    "test:e2e": "npm run validate:env-e2e && jest --config jest/e2e.config.js",
    "lint": "tslint -t stylish 'src/**/*.ts'",
    "lint:watch": "chokidar \"src/**/*.ts\" -c \"tslint -t stylish --force '{path}'\"",
    "validate:env": "tsc src/env.ts --lib esnext --esModuleInterop --outDir ./build/ && node ./build/env.js",
    "validate:env-e2e": "tsc jest/__setup__/e2e-env-test.ts --lib esnext --esModuleInterop --outDir ./build/e2e && node ./build/e2e/e2e-env-test.js",
    "clean": "rimraf build",
    "clean:graphql": "rimraf build/**/*.{gql,graphql,graphqls}",
    "copy:graphql": "cpx \"src/**/*.{gql,graphql,graphqls}\" build",
    "copy:graphql:watch": "chokidar \"./src/**/*.{gql,graphql,graphqls}\" -c \"npm run clean:graphql && npm run copy:graphql && touch src/server.ts\"",
    "docker-mount": "docker-share mount -t",
    "gql-2-ts": "graphql-to-typescript src/graphql/*.graphqls src/graphql/_generated/types/index.ts "
  },
  "engines": {
    "node": ">= 8.1.4"
  },
  "dependencies": {
    "apollo-server-koa": "1.3.6",
    "bluebird": "3.5.1",
    "chalk": "2.4.1",
    "envalid": "4.1.4",
    "flashheart": "2.9.0",
    "graphql": "0.13.2",
    "graphql-playground-middleware-koa": "1.4.2",
    "graphql-tools": "2.24.0",
    "graphql-voyager": "1.0.0-rc.11",
    "koa": "2.5.1",
    "koa-bodyparser": "4.2.0",
    "koa-convert": "1.2.0",
    "koa-cors": "0.0.16",
    "koa-heartbeat": "0.1.2",
    "koa-router": "7.4.0",
    "lodash": "4.17.10",
    "moment": "2.22.1",
    "source-map-support": "0.5.5",
    "winston": "2.4.2"
  },
  "devDependencies": {
    "@types/bluebird": "3.5.20",
    "@types/graphql": "0.13.0",
    "@types/jest": "22.2.3",
    "@types/koa": "2.0.45",
    "@types/koa-router": "7.0.28",
    "@types/nock": "9.1.3",
    "apollo-cache-inmemory": "1.1.12",
    "apollo-client": "2.2.8",
    "apollo-link-http": "1.5.4",
    "cash-touch": "0.2.0",
    "chokidar-cli": "1.2.0",
    "cpx": "1.5.0",
    "docker-share": "0.0.4",
    "graphql-tag": "2.8.0",
    "graphql-to-typescript": "0.1.2",
    "isomorphic-fetch": "2.2.1",
    "jest": "22.4.3",
    "jest-junit": "3.7.0",
    "nock": "9.2.5",
    "npm-run-all": "4.1.3",
    "rimraf": "2.6.2",
    "ts-jest": "22.4.5",
    "tsc-watch": "1.0.21",
    "tslint": "5.8.0",
    "tslint-config-airbnb": "5.6.0",
    "typescript": "2.8.3"
  },
  "jest-junit": {
    "output": "./reports/test/junit.xml"
  }
}
