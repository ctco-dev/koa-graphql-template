{
  "files": [
    "src/server.ts"
  ],
  "include": [
    "**/__tests__/*.ts"
  ],
  "compilerOptions": {
    "outDir": "./build",
    "target": "ES2017",
    "module": "commonjs",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "pretty": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "lib": ["esnext"]
  },
  "exclude": [
    "node_modules",
    "build"
  ]
}
